@article{ ISI:000463251000006,
Author = {Hofmann, Julian and Schuettrumpf, Holger},
Title = {{Holistic approach for a multifunctional heavy rain risk information tool}},
Journal = {{WASSERWIRTSCHAFT}},
Year = {{2019}},
Volume = {{109}},
Number = {{4}},
Pages = {{39-45}},
Abstract = {{The recent severe weather events in May and June 2018 have once again
   made us realize that heavy rainfall induced flash floods can occur
   everywhere, anytime and often be very local in various forms and
   consequences - a heavy rain risk exists basically in every German
   municipality! However, efficient and standardized hazard and risk maps
   are missing throughout Germany. A uniform and systematic procedure for
   documentation and risk analysis for heavy rainfall events does not
   currently exist. Actual warnings are only based on the precipitation or
   rather on the intensity of the rainfall, whereby the real threat due to
   flash floods is just as insufficiently considered as the vulnerability
   of the urban structures. This article presents an approach for a
   multifunctional heavy rainfall risk information tool which can be used
   for systematic documentation, the generation of standardized, high
   spatially resolved hazard and risk maps as well as for a hydrodynamic,
   risk based early warning system. The operation principle, the
   possibilities and limits of the holistic information tool are explained
   by means of an application example of the city of Aachen as wells as the
   heavy rainfall event of 29.05.2018.}},
