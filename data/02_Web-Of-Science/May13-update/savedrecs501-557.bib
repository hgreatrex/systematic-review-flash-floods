@inproceedings{ ISI:000481634400013,
Author = {Chan, N. W. and Tan, M. L. and Ghani, A. A. and Zakaria, N. A.},
Editor = {{Kondo, AA and Park, JK and Park, JH}},
Title = {{Sustainable urban drainage as a viable measure of coping with heat and
   floods due to climate change}},
